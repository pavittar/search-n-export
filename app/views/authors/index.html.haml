%h1
  Listing Authors

= render 'application/author_search'

%table.table.table-condensed
  %thead
    %tr
      %th Author name
      %th Number of songs
      %th{colspan: 3}= link_to 'New Author', new_author_path, class: 'btn btn-primary btn-xs'

  %tbody
    - @authors.each do |author|
      %tr
        %td= author.name
        %td= author.songs_count
        %td= link_to 'Show', author
        %td= link_to 'Edit', edit_author_path(author)
        %td= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }

.pull-left
  = page_entries_info @authors
.pull-right
  = paginate @authors
